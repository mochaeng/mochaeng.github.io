---

<footer class="h-14 flex items-start">
  <div class="flex mx-auto gap-5">
    {
      infos.map((info) => (
        <a href={info.url} target="_blank">
          <Button>
            <Image width={34} src={info.icon} alt={info.alt} />{" "}
          </Button>
        </a>
      ))
    }
  </div>
</footer>
