---
import { Image } from "astro:assets";
import Button from "./ui/Button.svelte";

import github from "../assets/icons/github.svg";
import email from "../assets/icons/email.svg";
import bluesky from "../assets/icons/bluesky.svg";
import linkedin from "../assets/icons/linkedin.svg";

const infos = [
  {
    url: "https://github.com/mochaeng",
    icon: github,
    alt: "Github Logo",
  },
  {
    url: "https://bsky.app/profile/mochaeng.bsky.social",
    icon: bluesky,
    alt: "Bluesky Logo",
  },
  {
    url: "https://www.linkedin.com/in/luiz-ant%C3%B4nio-4b88161b3/",
    icon: linkedin,
    alt: "Linkedin",
  },
  {
    url: "mailto:campos.antoonio@gmail.com",
    icon: email,
    alt: "Email logo",
  },
