---
type Props = {
  title: string;
};

const { title } = Astro.props;
import "../global.css";
import "@fontsource-variable/dm-sans";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Mochaeng is a software developer from Brazil"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="bg-background min-h-screen h-screen overflow-auto flex flex-col">
    <slot />
  </body>
</html>
