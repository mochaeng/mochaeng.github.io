---
import Layout from '../layouts/Base.astro'
import { formatDate } from '../scripts/utils'
import '../styles/blog.css'

const { frontmatter } = Astro.props
---

<Layout title={frontmatter.title}>
    <main
        class="mx-2 p-4 text-text mt-24 max-w-screen-xl bg-blogBg border-2 border-border rounded-base"
    >
        <div class="flex flex-col gap-2">
            <h1 class="text-4xl font-bold">{frontmatter.title}</h1>
            <p>Published on: {formatDate(frontmatter.pubDate)}</p>
            <p>
                Written by <span class="font-bold">{frontmatter.author}</span>
            </p>

