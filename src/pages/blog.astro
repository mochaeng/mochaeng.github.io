---
import BlogPost from "../components/BlogPost.svelte";
import Layout from "../layouts/Base.astro";

const allPosts = await Astro.glob("./posts/*.md");
---

<Layout title="Mochaeng's blog">
  <div
    class="pt-20 px-4 mt-6 flex flex-col gap-2 text-text max-w-screen-xl w-full"
  >
    <h1 class="text-4xl font-bold">Mochaeng's blog</h1>
    <p class="text-xl">
      Some of my thoughts, struggles, and discoveries as a developer. Iâ€™ll be
      sharing topics that interest me, like Rust and frontend development with
      Svelte. Occasionally, I can post non-programming stuff too.
    </p>
    <ul class="mt-4">
      {
        allPosts.map((post) => (
          <BlogPost
            title={post.frontmatter.title}
            url={post.url}
            description={post.frontmatter.description}
            date={post.frontmatter.pubDate}
          />
        ))
      }
    </ul>
  </div>
</Layout>
